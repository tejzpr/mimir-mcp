{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "tls": {
      "enabled": true,
      "cert_file": "/etc/ssl/certs/medha.pem",
      "key_file": "/etc/ssl/private/medha.key"
    }
  },
  "database": {
    "type": "postgres",
    "sqlite_path": "",
    "postgres_dsn": "postgresql://medha:PASSWORD@localhost:5432/medha_prod?sslmode=require"
  },
  "auth": {
    "type": "saml"
  },
  "saml": {
    "entity_id": "https://your-production-domain.com",
    "acs_url": "https://your-production-domain.com/saml/acs",
    "metadata_url": "https://your-production-domain.com/saml/metadata",
    "idp_metadata": "https://idp.example.com/metadata",
    "certificate": "-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----",
    "private_key": "-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----",
    "provider": "okta"
  },
  "git": {
    "default_branch": "main",
    "sync_interval_minutes": 60
  },
  "security": {
    "encryption_key": "GENERATED_KEY_HERE",
    "token_ttl_hours": 12
  },
  "embeddings": {
    "enabled": false,
    "provider": "openai",
    "base_url": "https://api.openai.com/v1",
    "model": "text-embedding-3-small",
    "api_key_env": "OPENAI_API_KEY",
    "dimensions": 1536,
    "lazy_index": true,
    "batch_size": 100
  }
}
